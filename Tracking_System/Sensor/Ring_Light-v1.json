{
  "$id": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Tracking_System/Sensor/Ring_Light-v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "Schema_UUID": {
      "const": "d2f53789-42c0-4978-b3a1-b5225db57f21"
    },
    "Instance_UUID": {
      "description": "The unique identifier for this object. (A UUID specified by RFC4122).",
      "type": "string",
      "format": "uuid"
    },
    "Enabled": {
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Metric-v1.json"
        },
        {
          "properties": {
            "Documentation": {
              "default": "Whether or not the ring light is activated/on"
            },
            "Sparkplug_Type": {
              "enum": [
                "Boolean"
              ]
            }
          }
        }
      ]
    },
    "Intensity": {
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Metric-v1.json"
        },
        {
          "properties": {
            "Documentation": {
              "default": null
            },
            "Sparkplug_Type": {
              "enum": [
                "FloatLE",
                "FloatBE",
                "DoubleLE",
                "DoubleBE",
                "UInt8",
                "UInt16LE",
                "UInt16BE",
                "UInt32LE",
                "UInt32BE",
                "UInt64LE",
                "UInt64BE"
              ]
            }
          }
        }
      ]
    }
  },
  "required": [
    "Schema_UUID",
    "Instance_UUID"
  ]
}
