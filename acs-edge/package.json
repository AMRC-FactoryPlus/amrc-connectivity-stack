{
  "name": "acs-edge",
  "version": "2.1.0",
  "description": "The Edge component of the AMRC Connectivity Stack",
  "author": "AMRC",
  "license": "MIT",
  "keywords": [
    "amrc",
    "factory-plus",
    "factoryplus",
    "acs",
    "amrc-connectivity-stack",
    "mqtt",
    "sparkplug"
  ],
  "main": "app.js",
  "nodemonConfig": {
    "ignore": [
      "./config/"
    ]
  },
  "scripts": {
    "dev": "ts-node-dev --project tsconfig.json --transpile-only --respawn app.ts",
    "build": "mkdir -p ./build && cp -R ./schema ./build/schema && tsc --project tsconfig.json",
    "clean": "tsc --build --clean",
    "start": "node --es-module-specifier-resolution=node app.js",
    "local": "node --es-module-specifier-resolution=node build/app.js",
    "test": "npx jest --coverage"
  },
  "type": "module",
  "dependencies": {
    "@amrc-factoryplus/utilities": "^1.3.0",
    "@st-one-io/nodes7": "^1.0.1",
    "@types/dotenv": "^8.2.0",
    "@types/node": "^16.10.1",
    "@types/ws": "^8.2.0",
    "@types/xmldom": "^0.1.31",
    "@xmldom/xmldom": "^0.8.6",
    "ajv-formats": "^2.1.1",
    "axios": "^0.21.4",
    "cookie-parser": "^1.4.5",
    "crypto-random-string": "^3.3.1",
    "dotenv": "^10.0.0",
    "jsonpath-plus": "^5.0.7",
    "jsonpointer": "^5.0.1",
    "node-opcua": "^2.103.0",
    "st-ethernet-ip": "^2.7.1",
    "ts-node-dev": "^1.1.8",
    "uuid": "^9.0.0",
    "ws": "^8.2.3",
    "xpath": "^0.0.32"
  },
  "private": true,
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^27.0.2",
    "@types/source-map-support": "^0.5.6",
    "@types/uuid": "^9.0.1",
    "jest": "^27.3.1",
    "nodemon": "^2.0.6",
    "source-map-support": "^0.5.21",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  }
}
