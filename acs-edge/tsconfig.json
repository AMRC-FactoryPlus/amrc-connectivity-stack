{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "outDir": "./build",
    "types": ["node"],
    //"types": ["node", "jest"],
    "strict": true
  },
  "exclude": ["**/__mocks__/*", "../../node_modules", "build", "split", "tests"]
}
