{
  "$id": "urn:uuid:5c9a6399-a557-4016-b0c1-8329601f489b",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Work in Process Order",
  "type": "object",
  "properties": {
    "Schema_UUID": {
      "const": "5c9a6399-a557-4016-b0c1-8329601f489b"
    },
    "Instance_UUID": {
      "description": "The unique identifier for this object. (A UUID specified by RFC4122).",
      "type": "string",
      "format": "uuid"
    },
    "Serial": {
      "allOf": [
        {
          "$ref": "urn:uuid:b16275f1-e443-4c41-a482-fcbdfbd20769"
        },
        {
          "properties": {
            "Sparkplug_Type": {
              "enum": [
                "String"
              ]
            },
            "Documentation": {
              "default": "The serial number that this order belongs to"
            }
          }
        }
      ]
    },
    "Task_Count": {
      "allOf": [
        {
          "$ref": "urn:uuid:b16275f1-e443-4c41-a482-fcbdfbd20769"
        },
        {
          "properties": {
            "Sparkplug_Type": {
              "enum": [
                "Int8"
              ]
            },
            "Documentation": {
              "default": "The number of tasks required for this build"
            }
          }
        }
      ]
    },
    "Started_At": {
      "allOf": [
        {
          "$ref": "urn:uuid:b16275f1-e443-4c41-a482-fcbdfbd20769"
        },
        {
          "properties": {
            "Sparkplug_Type": {
              "enum": [
                "DateTime"
              ]
            },
            "Documentation": {
              "default": "The date and time that this order started production"
            }
          }
        }
      ]
    },
    "Completed_At": {
      "allOf": [
        {
          "$ref": "urn:uuid:b16275f1-e443-4c41-a482-fcbdfbd20769"
        },
        {
          "properties": {
            "Sparkplug_Type": {
              "enum": [
                "DateTime"
              ]
            },
            "Documentation": {
              "default": "The date and time that this order completed production"
            }
          }
        }
      ]
    },
    "Status": {
      "allOf": [
        {
          "$ref": "urn:uuid:b16275f1-e443-4c41-a482-fcbdfbd20769"
        },
        {
          "properties": {
            "Sparkplug_Type": {
              "enum": [
                "String"
              ]
            },
            "Documentation": {
              "default": "The status of this order"
            }
          }
        }
      ]
    },
    "Processes": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_]*$": {
          "$ref": "urn:uuid:634d8f97-7b15-4f36-b9f4-9645930e6885"
        }
      }
    }
  },
  "required": [
    "Schema_UUID",
    "Instance_UUID"
  ]
}